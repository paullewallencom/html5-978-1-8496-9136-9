<html><head><script src="animation.js"></script><script>window.onload = function() {	var canvas=document.getElementById("myCanvas");		var amplitude = Math.PI/4; // 45 degrees	var period = 4000;	var theta = null;	var pendulumLength = 250;	var pendulumWidth = 10;	var rotationPointX = canvas.width/2;	var rotationPointY = 20;		// instantiate new animation object	var myAnimation = new Animation(canvas, 100);		myAnimation.setUpdateStage(function() {		theta = (amplitude * Math.sin((2 * Math.PI* myAnimation.getTime())/period)) + Math.PI/2;		});		myAnimation.setDrawStage(function() {		var context = myAnimation.getContext();		// draw top circle		context.beginPath();		context.arc(rotationPointX,rotationPointY,15,0,2*Math.PI,false);		context.fillStyle="#868686";		context.fill();				// draw top circle hole		context.beginPath();		context.arc(rotationPointX,rotationPointY,10,0,2*Math.PI,false);		context.fillStyle="#626262";		context.fill();		// draw pendulum		context.beginPath();		var endPointX = rotationPointX + (pendulumLength * Math.cos(theta));		var endPointY = rotationPointY + (pendulumLength * Math.sin(theta));		context.beginPath();		context.moveTo(rotationPointX,rotationPointY);		context.lineTo(endPointX,endPointY);		context.lineWidth=pendulumWidth;		context.lineCap="round";		context.strokeStyle="#868686";		context.stroke();				// draw bottom circle		context.beginPath();		context.arc(endPointX,endPointY,			40,0,2*Math.PI,false);		var grd=context.createLinearGradient(endPointX-50,			endPointY-50,endPointX+50,endPointY+50);				grd.addColorStop(0,"#868686"); // dark gray		grd.addColorStop(0.5,"white"); // light gray		grd.addColorStop(1,"#868686"); // dark gray		context.fillStyle=grd;		context.fill();		context.strokeStyle="#868686";		context.lineWidth=2;		context.stroke();	});		myAnimation.start();}</script></head><body>	<canvas id="myCanvas" width="638" height="330" 		style="border:1px solid black;"></canvas></body></html>